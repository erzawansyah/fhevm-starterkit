{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "startersDir": {
      "type": "string"
    },
    "workingDir": {
      "type": "string"
    },
    "metadataFile": {
      "type": "string"
    },
    "starterFrontendDir": {
      "type": "string"
    },
    "template": {
      "type": "object",
      "properties": {
        "hardhat": {
          "type": "object",
          "properties": {
            "repo": {
              "type": "string"
            },
            "dir": {
              "type": "string"
            },
            "branch": {
              "type": "string"
            },
            "commit": {
              "type": "string"
            }
          },
          "required": [
            "repo",
            "dir"
          ],
          "additionalProperties": false
        },
        "frontend": {
          "type": "object",
          "properties": {
            "repo": {
              "type": "string"
            },
            "dir": {
              "type": "string"
            },
            "branch": {
              "type": "string"
            },
            "commit": {
              "type": "string"
            }
          },
          "required": [
            "repo",
            "dir"
          ],
          "additionalProperties": false
        },
        "actions": {
          "type": "object",
          "properties": {
            "excludeDirs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "excludeFiles": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "createDirs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "createFiles": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                },
                "required": [
                  "path",
                  "content"
                ],
                "additionalProperties": false
              }
            },
            "additionalPackages": {
              "type": "object",
              "properties": {
                "dependencies": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "devDependencies": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "overrides": {
          "type": "string"
        },
        "markdown": {
          "type": "string"
        }
      },
      "required": [
        "hardhat",
        "frontend",
        "actions",
        "overrides",
        "markdown"
      ],
      "additionalProperties": false
    },
  },
  "additionalScripts": {
    "type": "object",
    "additionalProperties": {
      "type": "string"
    }
    "taxonomy": {
      "type": "object",
      "properties": {
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "chapters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "commonTags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "concepts": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "categories",
        "chapters",
        "commonTags",
        "concepts"
      ],
      "additionalProperties": false
    },
    "validation": {
      "type": "object",
      "properties": {
        "requiredFiles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "requiredFolders": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fileTypeRestrictions": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "requiredFiles",
        "requiredFolders",
        "fileTypeRestrictions"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "startersDir",
    "workingDir",
    "metadataFile",
    "template",
    "taxonomy",
    "validation"
  ],
  "additionalProperties": false
}
