{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "scripts/**/*",
        "lib/helper"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "base",
        "starters"
    ]
}
